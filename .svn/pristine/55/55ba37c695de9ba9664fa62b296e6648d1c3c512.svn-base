	public static Date getToday() {
		SimpleDateFormat sdf1 = new SimpleDateFormat("yyyy-MM-dd");
		try {
			Date currDate = new Date();
			String format = sdf1.format(currDate);
			Date oldDate = sdf1.parse(format);
			return oldDate;
		} catch (Exception e) {
			e.printStackTrace();
		}
		return null;
	}

